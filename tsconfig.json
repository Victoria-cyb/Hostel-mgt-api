{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "baseUrl": "./src",
    
    "module": "ESNext",
    "target": "ESNext",
    "types": ["node"],
    
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    
    "moduleResolution": "Node",
    "esModuleInterop": true,           // Add this
    "allowSyntheticDefaultImports": true, // Add this
    
    "noImplicitAny": true,
    
    "strict": true,
    "jsx": "react-jsx",
    // "verbatimModuleSyntax": true,   // Remove or comment out this line
    "isolatedModules": true,
    "noUncheckedSideEffectImports": true,
    "moduleDetection": "force",
    "skipLibCheck": true
  },
  "include": ["./src"],
  "tsc-alias": {
    "verbose": false,
    "resolveFullPaths": true,
    "fileExtensions": {
      "inputGlob": "{js,jsx,mjs}",
      "outputCheck": ["js", "json", "jsx", "mjs"]
    }
  }
}